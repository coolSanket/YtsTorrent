<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kumarsanket.torrentmovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyNewTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".TrailerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/TrailerTheme" />
        <activity
            android:name=".ThreeDMovieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".TopRatedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".SuggestedMovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SecondMovieDetailTheme" />
        <activity
            android:name=".NewMovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyNewTheme" />
        <activity
            android:name=".SecondMovieDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SecondMovieDetailTheme" />
        <activity
            android:name=".RewardedVideoActivity" />
        <activity
            android:name=".AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyNewTheme"/>
    </application>

</manifest>